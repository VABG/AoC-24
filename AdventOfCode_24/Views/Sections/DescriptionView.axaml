<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:avalonia="clr-namespace:TheArtOfDev.HtmlRenderer.Avalonia;assembly=Avalonia.HtmlRenderer"
             mc:Ignorable="d" d:DesignWidth="1024" d:DesignHeight="450"
             x:Class="AdventOfCode_24.Views.Sections.DescriptionView">
  <Menu>
    <MenuItem Header="Description" Background="#252525" Margin="2,2,2,2" StaysOpenOnClick="True">
      <Grid MaxHeight="1024" MaxWidth="1024">
        <Grid.RowDefinitions>
          <RowDefinition Height="auto"/>
          <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <Button Grid.Row="0" Content="Refresh" Command="{Binding Refresh}"/>
        <avalonia:HtmlPanel Grid.Row="1" Text="{Binding Description}" HorizontalAlignment="Stretch"/>
      </Grid>
    </MenuItem>
  </Menu>
</UserControl>