<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="AdventOfCode_24.Views.Sections.CookieView">
  <Menu>
    <MenuItem Header="Cookie" IsEnabled="{Binding CanRun}" Background="#252525" Margin="2,2,2,2">
      <StackPanel Width="300">
        <Label Content="Data:" />
        <TextBox Text="{Binding Cookie}" />
        <Button Content="Save" Command="{Binding SaveCookie}" />
      </StackPanel>
    </MenuItem>
  </Menu>
</UserControl>
