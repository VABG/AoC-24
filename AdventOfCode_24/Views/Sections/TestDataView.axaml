<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="AdventOfCodeUI.Views.Sections.TestDataView">
    <UserControl.Styles>
        <Style Selector="TextBox">
            <Setter Property="FontSize" Value="13" />
            <Setter Property="FontFamily" Value="Lucida Console" />
        </Style>
    </UserControl.Styles>
    <Button Content="ðŸ— "
            ToolTip.Tip="Test Data"
            FontSize="22"
            VerticalContentAlignment="Center"
            Padding="0"
            IsEnabled="{Binding CanRun}"
            Background="#252525">
        <Button.Styles>
            <Style>
                <Style Selector="FlyoutPresenter">
                    <Setter Property="MaxWidth" Value="1024" />
                    <Setter Property="MaxHeight" Value="1024" />
                    <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Hidden" />
                </Style>
            </Style>
        </Button.Styles>
        <Button.Flyout>
            <Flyout Placement="BottomEdgeAlignedLeft">
                <Grid ScrollViewer.VerticalScrollBarVisibility="Disabled">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <StackPanel Width="300">
                        <Label Content="Data:" />
                        <TextBox Text="{Binding TestInput}"
                                 Height="300"
                                 TextWrapping="Wrap" AcceptsReturn="True"
                                 ScrollViewer.VerticalScrollBarVisibility="Auto" />
                        <Label Content="Expected Result:" />
                        <TextBox Text="{Binding TestResult}" />
                        <Button Content="Save" Command="{Binding SaveTestData}" />
                    </StackPanel>
                </Grid>
            </Flyout>
        </Button.Flyout>
    </Button>
</UserControl>